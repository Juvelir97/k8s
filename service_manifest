apiVersion : apps/v1
kind: Deployment
metadata:
  name: my-deployment
  labels:
    app : k8s-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      project: nginx_prod
  template:
    metadata:
      labels:
        project: nginx_prod   # Service will look for those PODS Labels!!!
    spec:
      containers:
        - name : nginx_web
          image: nginx:latest
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: my-single-pod-service
  labels:
    env  : prod
spec:
  selector:
    project: nginx_prod    # Selecting PODS with those Labels
  ports:
    - name      : app-listener
      protocol  : TCP
      port      : 80  # Port on Load Balancer
      targetPort: 80  # Port on POD
  type: LoadBalancer
