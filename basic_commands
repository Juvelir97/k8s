kubectl cluste-info #show cluster info

kubectl get nodes # Display running nodes

kubectl get pod # Display pods(the smallest piece of cluster)

kubectl describe pod <podname>  # Detailed information of pod

kubectl run nginx --image=nginx

kubectl exec -it <podname> -- <command> # Execute command on a pod 

kubectl logs <podname> # display logs
     kubectl logs <podname> -c <containername> # If 2 or more containers running within a pod

kubectl port-forward <podname> <hostport>:<podport> # Port forwarding

kubectl apply -f <file.yaml> # launch manifest file
